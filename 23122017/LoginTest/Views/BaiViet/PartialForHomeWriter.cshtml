@using LoginTest.Models;
@model IEnumerable<BaiViet>


@foreach (var item in Model)
{


    <div class="col-md-3 resent-grid recommended-grid slider-top-grids">
        <div class="resent-grid-img recommended-grid-img">
            @if (item.AnhBia != null)
                {
                    var base64 = Convert.ToBase64String(item.AnhBia);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })"><img src="@imgsrc" style="height:200px" alt=""/ ></a>
            }
            else
            {
                <a><img src="~/Content/images/4.jpg" alt="" style="height:200px"></a>
            }
        </div>

        <div class="resent-grid-info recommended-grid-info video-info-grid">

            <h3><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" class="title">@item.TieuDe</a></h3>
            <h5 style="margin-top:10px"><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" style="color:black">@item.TomTatNoiDung</a></h5>
            <ul>
                <li class="left-list"><p class="views views-info">@item.NgayChinhSua.Value.ToString("hh:mm   dd/MM/yyyy")</p></li>
                <li class="right-list"><p class="views views-info">@item.SoLanXem 100 views</p></li>
            </ul>
        </div>

    </div>
}
<div class="clearfix"> </div>

