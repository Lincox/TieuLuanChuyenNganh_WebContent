<!DOCTYPE HTML>
<html>
<head>
    <title>ShareYour</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>


    <!--CKEditor and CKFinder-->
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>

    <!--Bootstrap-->
    <link href="~/Content/css/bootstrap.min.css" rel='stylesheet' type='text/css' media="all" />
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.css">

    <!--link tạo nút đăng nhập facebook-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link href="/Content/css/dashboard.css" rel="stylesheet">

    <!-- Custom Theme files -->
    <link href="~/Content/css/style1.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/Content/js/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


    <!-- fonts -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>

    <style>
        .navbar-toggle .icon-bar {
            display: block;
            width: 22px;
            height: 2px;
            background-color: #000;
            border-radius: 1px;
        }
    </style>

    <style type="text/css">
        #element1 {
            display: inline-block;
        }

        #element2 {
            display: inline-block;
            margin-right: 10px;
        }

        #element3 {
            display: inline-block;
            margin-right: 10px;
            position: relative;
        }
    </style>

    <style>
        .container-right {
            padding-right: 15px;
            padding-left: 15px;
            margin-top: 15px;
            margin-right: auto;
            margin-left: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index", "Home")" title="" class="links">
                    <img alt="Widget View" src="@Url.Content("~/Content/images/LoGo1.png")" height="20px" width="200px" class="img-responsive" style="padding-top: 15px">
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <div class="top-search">
                    <form class="navbar-form navbar-right">
                        <input type="text" class="form-control" placeholder="Search...">
                        <input type="submit" value=" ">
                    </form>
                </div>
                <div class="header-top-right">


                    @if (@Session["HoTen"] != null && @Session["QuyenID"] != null)
                    {
                        <div class="file" style="margin-top:-10px">
                            <a class="file" href="@Url.Action("HomeNguoiViet","NguoiViet",new {@idUser = Session["QuyenID"]})">Xin Chào, @Session["HoTen"].ToString()</a>
                            <a class="file" href="/Home/Logout"><span class="glyphicon glyphicon-chevron-down file" style="font-size:0.67em;"></span></a>
                        </div>


                        <div class="clearfix"> </div>
                    }

                    @if (@Session["HoTen"] == null && @Session["QuyenID"] == null)
                    {
                        <a href="/Home/LoginFacebook" class="btn btn-fb"><i class="fa fa-facebook" style="margin-right:10px"></i> Đăng nhập</a>

                    }


                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>



