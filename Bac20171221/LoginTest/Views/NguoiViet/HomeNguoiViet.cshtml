@using LoginTest.Models;
@model List<BaiViet>

@{
    IEnumerable<BaiViet> lstCB = (IEnumerable<BaiViet>)ViewBag.contentbelong;
}
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>ShareYour</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content=""> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--bootstrap-->
    <link href="/Content/css/bootstrap.min.css" rel='stylesheet' type='text/css' media="all" />

    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.css">

    <!--link tạo nút đăng nhập facebook-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

    <!-- //bootstrap -->
    <link href="/Content/css/dashboard.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap.css">
    <!-- Custom Theme files -->
    <link href="/Content/css/style1.css" rel='stylesheet' type='text/css' media="all" />
    <script src="/Content/js/jquery-1.11.1.min.js"></script>
    <!--start-smoth-scrolling-->
    <!-- fonts -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
    <!-- //fonts -->
    <style>
        div {
            display: block;
        }

        .navbar-toggle .icon-bar {
            display: block;
            width: 22px;
            height: 2px;
            background-color: #000;
            border-radius: 1px;
        }
    </style>

    <style type="text/css">
        #element1 {
            display: inline-block;
        }

        #element2 {
            display: inline-block;
            margin-right: 10px;
        }

        #element3 {
            display: inline-block;
            margin-right: 10px;
            position: relative;
        }
    </style>

    <style>
        .container-right {
            padding-right: 15px;
            padding-left: 15px;
            margin-top: 15px;
            margin-right: auto;
            margin-left: auto;
        }
    </style>
</head>

<body>
    @foreach (var item in Model.Take(1))
    {
        if (@Session["QuyenID"].ToString() == item.User.C_idUser.ToString())
        {
            <div class="row">
                <div style="padding-left:15%;padding-top:30px;padding-bottom:10px">

                    <img class="text-center" src="/Content/images/2.jpg" width="100" height="100" style="border-radius:50%; margin-bottom: 10px; margin-top: 10px;" />
                    <h3 style="color:black; display: inline-block; padding-left:2%">@item.User.HoTen</h3>

                    <a style="padding-left:20%; padding-right:30px">
                        @Html.ActionLink("Đăng Bài", "Create", "QuanLyBaiViet", null, new { @class = "btn btn-success", @style = "font-size:170%" })
                    </a>
                    <a>
                        @Html.ActionLink("Quản lý doanh thu", null, null, null, new { @class = "btn btn-warning", @style = "font-size:170%" })
                    </a>
                </div>
            </div>
        }

        if (@Session["QuyenID"].ToString() != item.User.C_idUser.ToString())
        {
            <div class="row">
                <div align="center" style="padding-top:30px;padding-bottom:10px">

                    <img class="text-center" src="/Content/images/2.jpg" width="100" height="100" style="border-radius:50%; margin-bottom: 10px; margin-top: 10px;" />
                    <h3 style="color:black; display: inline-block; padding-left:2%">@item.User.HoTen</h3>
                </div>
            </div>
        }
    }

        <div>
            <div class="main-grids">
                <!--Gán dữ liệu từ controller thông qua Viewbag vào Partialview-->
                <div class="top-grids">
                    @Html.Partial("~/Views/BaiViet/PartialForHomeWriter.cshtml", lstCB)
                </div>
            </div>
        </div>
    </body>
</html>
