@using LoginTest.Models;
@model IEnumerable<BaiViet>

@foreach (var item1 in Model.Take(1))
{
    <div class="recommended-info">
        <a href="@Url.Action("CongNghe","QuanLyTheLoai",new { @idTheLoai = 1})"><h3>Công nghệ</h3></a>
    </div>
}

@foreach (var item in Model.Take(3))
{
    <div class="col-md-4 resent-grid recommended-grid slider-top-grids">
        <div class="resent-grid-img recommended-grid-img">
            @if (item.AnhBia != null)
                {
                    var base64 = Convert.ToBase64String(item.AnhBia);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })"><img src="@imgsrc" style="height:220px" alt=""/ ></a>
            }
            else
            {
                <a><img src="~/Content/images/t1.jpg" alt="" style="height:220px"></a>
            }
        </div>

        <div class="resent-grid-info recommended-grid-info video-info-grid">

            <h3><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" class="title">@item.TieuDe</a></h3>
            <h5 style="margin-top:10px"><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" style="color:black">@item.TomTatNoiDung</a></h5>
            <ul>
                <li><p class="author author-info"><a href="@Url.Action("HomeNguoiViet","NguoiViet",new {@idUser = item.User.C_idUser})" class="author">@item.User.HoTen</a></p></li>
                <li class="right-list"><p class="views views-info">@item.SoLanXem 100 views</p></li>
            </ul>
        </div>

    </div>
}
<div class="clearfix"> </div>
