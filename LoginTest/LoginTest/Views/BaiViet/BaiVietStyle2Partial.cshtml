@using LoginTest.Models;
@model IEnumerable<BaiViet>

<div class="recommended-info">
    <h3>Học tập</h3>
</div>
@foreach (var item in Model.Take(4))
{
    <div class="col-md-3 resent-grid recommended-grid">
        <div class="resent-grid-img recommended-grid-img">
            @if (item.AnhBia != null)
                {
                    var base64 = Convert.ToBase64String(item.AnhBia);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <a><img src="@imgsrc" style="height:180px" alt=""/ ></a>
            }
            else
            {
                <a><img src="~/Content/images/t1.jpg" style="height:180px" alt="" /> </a>
            }
        </div>
        <div class="resent-grid-info recommended-grid-info video-info-grid">
            <h5><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" class="title">@item.TieuDe</a></h5>
            <h5><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" class="title title-info">@item.TomTatNoiDung</a></h5>
            <ul>
                <li><p class="author author-info"><a href="#" class="author">@item.User.HoTen</a></p></li>
                <li class="right-list"><p class="views views-info">@item.SoLanXem views</p></li>
            </ul>
        </div>
        <div class="col-lg-10 col-centered" style="margin-top:2%">
            <h3><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" style="color:#475b6f"><b>@item.TieuDe</b></a></h3>
        </div>
    </div>
}
<div class="clearfix"> </div>

