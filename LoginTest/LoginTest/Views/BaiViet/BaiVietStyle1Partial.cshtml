@using LoginTest.Models;
@model IEnumerable<BaiViet>

<div class="recommended-info">
    <h3>Công Nghệ</h3>
</div>

@*@foreach (var item in Model.Take(3).Where(n => n.C_idTheLoai==1))*@
@foreach (var item in Model.Take(3))
{
        <div class="col-md-4 resent-grid recommended-grid slider-top-grids">
            <div class="resent-grid-img recommended-grid-img">
                @if (item.AnhBia != null)
                {
                    var base64 = Convert.ToBase64String(item.AnhBia);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <a><img src="@imgsrc" style="height:220px" alt=""/ ></a>
                }
                else
                {
                    <a><img src="~/Content/images/t1.jpg" alt="" style="height:220px"></a>
                }
            </div>
            <div class="resent-grid-info recommended-grid-info">
                <h3><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" class="title title-info">@item.TieuDe</a></h3>
                <h5><a href="@Url.Action("DetailBaiViet","NguoiViet",new { @idBaiViet = @item.C_idBaiViet })" class="title title-info">@item.TomTatNoiDung</a></h5>
                <ul>
                    <li><p class="author author-info"><a href="#" class="author">@item.User.HoTen</a></p></li>
                    <li class="right-list"><p class="views views-info">@item.SoLanXem views</p></li>
                </ul>
            </div>
        </div>
}
<div class="clearfix"> </div>
